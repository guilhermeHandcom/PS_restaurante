<h1>Lista de Categorias</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categorias.each do |categoria| %>
      <tr>
        <td><%= categoria.nome %></td>
        <td><%= link_to 'Visualizar', categoria, :class => 'btn btn-default' %></td>
        <td><%= link_to 'Editar', edit_categoria_path(categoria), :class => 'btn btn-default' %></td>
        <td><%= link_to 'Excluir', categoria, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

