<%= form_for(@comanda, :html => {role: "form", :class => 'form-horizontal'}) do |f| %>
  <% if @comanda.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comanda.errors.count, "error") %> prohibited this comanda from being saved:</h2>

      <ul>
      <% @comanda.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Número</label>
    <div class="col-sm-2">
      <%= f.number_field :numero, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Mesa (número)</label>
    <div class="col-sm-1">
      <%= f.select(:mesa_id, Mesa.all.collect {|m| [ m.numero, m.id ] }, { :include_blank => false }, :class => 'form-control') %>
    </div>
  </div>

  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Funcionário</label>
    <div class="col-sm-4">
      <%= f.select(:funcionario_id, Funcionario.all.collect {|f| [ f.nome, f.id ] }, { :include_blank => false }, :class => 'form-control') %>
    </div>
  </div>  

  <div class="form-group">
    <label class="col-sm-2 control-label">Aberto</label>
    <!-- <div class="col-sm-offset-2 col-sm-10"> -->
      <div class="checkbox">
        <label>
          <%= f.check_box :aberto %>
        </label>
      </div>
    <!-- </div> -->
  </div>



  <div class="actions">
    <% if controller.action_name == "new" %>
      <%= f.submit "Criar comanda", :class => 'btn btn-default' %>
    <% else %>
      <%= f.submit "Atualizar comanda", :class => 'btn btn-default' %>
    <% end %>
  </div>
<% end %>
