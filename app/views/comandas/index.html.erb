<h1>Listing comandas</h1>

<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th>Mesa</th>
      <th>Valor total</th>
      <th>Funcionario</th>
      <th>Aberto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comandas.each do |comanda| %>
      <tr>
        <td><%= comanda.numero %></td>
        <td><%= comanda.mesa %></td>
        <td><%= comanda.valor_total %></td>
        <td><%= comanda.funcionario %></td>
        <td><%= comanda.aberto %></td>
        <td><%= link_to 'Show', comanda %></td>
        <td><%= link_to 'Edit', edit_comanda_path(comanda) %></td>
        <td><%= link_to 'Destroy', comanda, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

