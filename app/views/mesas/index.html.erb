<h1>Lista de mesas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Numero</th>
      <th>Capacidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mesas.each do |mesa| %>
      <tr>
        <td><%= mesa.numero %></td>
        <td><%= mesa.capacidade %></td>
        <td><%= link_to 'Visualizar', mesa, :class => 'btn btn-default' %></td>
        <td><%= link_to 'Editar', edit_mesa_path(mesa), :class => 'btn btn-default' %></td>
        <td><%= link_to 'Excluir', mesa, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Mesa', new_mesa_path, :class => 'btn btn-success' %>
