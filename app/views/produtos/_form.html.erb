      <ul>
      <% @produto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :valor %><br>
    <%= f.text_field :valor %>
  </div>
  <div class="field">
    <%= f.label :categoria_id %><br>
    <%= f.select(:categoria_id, Categoria.all.collect {|c| [ c.nome, c.id ] }, { :include_blank => false }) %>
  </div>
  <div class="actions">
    <% if controller.action_name == "new" %>
      <%= f.submit "Criar produto" %>
    <% else %>
      <%= f.submit "Atualizar produto" %>
    <% end %>
  </div>
<% end %>
