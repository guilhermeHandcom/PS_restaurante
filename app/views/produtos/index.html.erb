<h1>Lista de produtos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Valor</th>
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.valor %></td>
        <td><%= produto.categoria.nome %></td>
        <td><%= link_to 'Visualizar', produto, :class => 'btn btn-default' %></td>
        <td><%= link_to 'Editar', edit_produto_path(produto), :class => 'btn btn-default' %></td>
        <td><%= link_to 'Excluir', produto, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

